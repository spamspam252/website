mixin line
	.line
		.round

mixin linex(id)
	div(id=id)
		.line
			.round

mixin sectionHeader(header, link)
	.sectionHeader
		a(href=link, id=header+"Title")
			.button-fill
				.button-text= header
				.button-inside
					.inside-text Gimme&nbspMe&nbspMore&nbsp!!!

mixin articleContent(blogImgSrc, title, time, bodyText)
	article.Article
		.BlogImage
			img(src= blogImgSrc, alt="Nope")
		section.ArticleText
			h2= title
			small= time
			p= bodyText
		
